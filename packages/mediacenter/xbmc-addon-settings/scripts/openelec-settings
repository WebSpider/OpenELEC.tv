#
# create system config
#

HOME="/storage"
XBMC_SETTINGS_FILE="/usr/share/xbmc/addons/os.openelec.settings/default_settings.xml"
OPENELEC_SETTINGS_PATH="$HOME/.xbmc/userdata/addon_data/os.openelec.settings"
OPENELEC_SETTINGS_FILE="settings.xml"

if [ -f $XBMC_SETTINGS_FILE ]; then
  if [ ! -f $OPENELEC_SETTINGS_PATH/$OPENELEC_SETTINGS_FILE ]; then
    mkdir -p $OPENELEC_SETTINGS_PATH
    cp $XBMC_SETTINGS_FILE $OPENELEC_SETTINGS_PATH/$OPENELEC_SETTINGS_FILE
  fi
fi

if [ -f "$OPENELEC_SETTINGS_PATH/$OPENELEC_SETTINGS_FILE" ]; then
  mkdir -p /run/config
  cat "$OPENELEC_SETTINGS_PATH/$OPENELEC_SETTINGS_FILE" | awk -F\" '{print $2"=\""$4"\""}' | sed '/^=/d' > /run/config/settings.conf
fi
