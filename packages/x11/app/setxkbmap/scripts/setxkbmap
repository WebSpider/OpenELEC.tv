OPENELEC_ADDON_HOME="/storage/.xbmc/userdata/addon_data/os.openelec.settings"
OPENELEC_ADDON_SETTINGS="$OPENELEC_ADDON_HOME/settings.xml"

DISPLAY=:0.0

X11_KEYMAP=us
X11_KEYMAP2=us

# parse settings file and export as variables
  if [ -f $OPENELEC_ADDON_SETTINGS ] ; then
    while read var; do
      export `echo $var | awk -F\" '{print $2"="$4""}' | sed '/^=/d'`
    done < $OPENELEC_ADDON_SETTINGS
  fi

# setup keyboard layout
  setxkbmap -display $DISPLAY -layout $X11_KEYMAP,$X11_KEYMAP2 -option "grp:alt_shift_toggle"
